@Html.PagedListPager(Model, page => Url.Action("Index", new
{
    page,
    Pil = Request.QueryString["Pil"],
    Pilce = Request.QueryString["Pilce"],
    Pmahalle = Request.QueryString["Pmahalle"],
    konutTuru = Request.QueryString["konutTuru"],
    PodaSayisi = Request.QueryString["PodaSayisi"],
    minTL = Request.QueryString["minTL"],
    maxTL = Request.QueryString["maxTL"]
}))
<a class="btn btn-success" style="margin-bottom: 10px" onclick="PopupFormKonutKiralik('@Url.Action("AddOrEditKonutKiralik","DB")')"><i class="fa fa-plus"></i> Ekle </a>
<script>
    var popUp, dataTableKonutKiralik;
    function PopupFormKonutKiralik(url) {
        var formDiv = $('<div/>');
        $.get(url)
            .done(function (response) {
                formDiv.html(response);

                popUp = formDiv.dialog({
                    autoOpen: true,
                    resizable: false,
                    title: 'Kiralık Konut Ekle',
                    height: 600,
                    width: 1200,
                    close: function myfunction() {
                        popUp.dialog('destroy').remove();
                    }
                });
            });
    }
    function SubmitFormKonutKiralik(form) {
        $.validator.unobtrusive.parse(form);
        var data = new FormData(form)

        if ($(form).valid()) {
            $.ajax({
                type: "POST",
                enctype: 'multipart/form-data',
                url: "/DB/AddOrEditKonutKiralik",
                processData: false,  // Important!
                contentType: false,
                cache: false,
                data: data,
                success: function (data) {
                    if (data.success) {
                        popUp.dialog('close');

                        location.reload();

                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                }
            });
        }
        return false;
    }
</script>