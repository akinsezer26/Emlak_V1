

@model Emlak.Models.BORCLARIM
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEditBorclarim", "DB", FormMethod.Post, new { onsubmit = "return SubmitFormBorclarim(this)" }))
{
    @Html.HiddenFor(model => model.BorcID)
    <div class="form-group">
        @Html.EditorFor(model => model.Kime, new { @htmlAttributes = new { placeholder = "Kime", @class = "form-control", autocomplete = "off" } })
        @Html.ValidationMessageFor(model => model.Kime)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.miktar, new { @htmlAttributes = new { placeholder = "Miktar", @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.miktar)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.AlacakliCep, new { @htmlAttributes = new { placeholder = "Alacakli Cep", @class = "form-control", autocomplete = "off" } })
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.OdemeTarihi, new { @htmlAttributes = new { placeholder = "Ödeme Tarihi", @class = "form-control", autocomplete = "off" } })
        @Html.ValidationMessageFor(model => model.OdemeTarihi)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.Note, new { @htmlAttributes = new { placeholder = "Not", @class = "form-control", autocomplete = "off" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Ekle" class="btn btn-primary" />
    </div>
}