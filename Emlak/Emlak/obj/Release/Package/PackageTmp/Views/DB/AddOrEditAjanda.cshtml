@model Emlak.Models.AJANDA
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEditAjanda", "DB", FormMethod.Post , new { onsubmit="return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.AjandaID)
    <div class="form-group">
        @Html.EditorFor(model => model.Konu, new { @htmlAttributes = new { placeholder = "Konu" , @class = "form-control", autocomplete="off"} })
        @Html.ValidationMessageFor(model => model.Konu)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.Kiminle, new { @htmlAttributes = new { placeholder = "Kiminle" , @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.Nerede, new { @htmlAttributes = new { placeholder = "Nerede" , @class = "form-control", autocomplete="off" } })
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.Tarih, new { @htmlAttributes = new { placeholder = "Tarih" , @class = "form-control",autocomplete="off" } })
        @Html.ValidationMessageFor(model => model.Tarih)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.Note, new { @htmlAttributes = new { placeholder = "Not" , @class = "form-control",autocomplete="off" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Ekle" class="btn btn-primary" />
    </div>
}