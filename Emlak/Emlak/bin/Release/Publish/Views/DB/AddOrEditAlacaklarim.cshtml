
@model Emlak.Models.ALACAKLARIM
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEditAlacaklarim", "DB", FormMethod.Post, new { onsubmit = "return SubmitFormAlacaklarim(this)" }))
{
    @Html.HiddenFor(model => model.AlacakID)
    <div class="form-group">
        @Html.EditorFor(model => model.Kimden, new { @htmlAttributes = new { placeholder = "Kimden", @class = "form-control", autocomplete = "off" } })
        @Html.ValidationMessageFor(model => model.Kimden)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.miktar, new { @htmlAttributes = new { placeholder = "Miktar", @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.miktar)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.BorcluCep, new { @htmlAttributes = new { placeholder = "Borçlu Cep", @class = "form-control", autocomplete = "off" } })
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.OdemeTarihi, new { @htmlAttributes = new { placeholder = "Ödeme Tarihi", @class = "form-control", autocomplete = "off" } })
        @Html.ValidationMessageFor(model => model.OdemeTarihi)
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.Note, new { @htmlAttributes = new { placeholder = "Not", @class = "form-control", autocomplete = "off" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Ekle" class="btn btn-primary" />
    </div>
}