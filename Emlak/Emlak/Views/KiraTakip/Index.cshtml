
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageOwner.cshtml";
}

<h1>Kira Takip</h1>
<table id="tableKiraTakip" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>No</th>
            <th>Kiracı Adı</th>
            <th>Kiracı Soyadı</th>
            <th>Cep</th>
            <th>Ödeme Tarihi</th>
            <th>Not</th>
        </tr>
    </thead>
</table>
