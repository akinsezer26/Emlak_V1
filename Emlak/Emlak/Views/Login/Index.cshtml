
@model Emlak.Models.USERS

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giris</title>
    <style>
         input[type=text] {
            width: 400px;
            padding: 12px 20px;
            box-sizing: border-box;
          }
         input[type=password] {
            width: 400px;
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;
          }
         input[type=submit] {
            width: 400px;
            padding: 12px 20px;
            margin: 8px 0;
            font-size: 25px;
            color:black;
            background:rgba(255,255,255,0.5);
            background-repeat:no-repeat;
            cursor:pointer;
            overflow: hidden;
            outline:none;
            border-radius: 18px;
            border-width:thick;
          }

        body {
            background-image: url('../../Image/bg.jpg');
            background-size: cover;      
            background-repeat:   no-repeat;
            height: 100%;
            width: 100%;
            padding: 0;
            margin: 0;
        }

        #login-div{
            position:absolute;
            left:38%;
            top:38%;
        }

    </style>
</head>
<body>
    <div id="login-div" class="input-group"> 
        @using (Html.BeginForm( "Authorize" , "Login" ,FormMethod.Post))
        {
            <table>
                <tr>
                    <td>@Html.EditorFor(model => model.UserNickName, new { htmlAttributes = new { placeholder = "Kullanıcı Adı" } })</td>
                </tr>
                <tr>
                    <td>@Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { placeholder = "Şifre" , type="password"} })</td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" name="LgnBtn" value="Giris"/>    
                    </td>
                </tr>
                <tr>
                    <td>
                        <label style="color:azure; font-size:x-large; margin-left:45px; text-shadow:3px 2px 2px black">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                    </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
